<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cabecalhoTexto"
            android:theme="@style/EstiloTexto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="HamburgueriaZ"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:theme="@style/EstiloTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FaÃ§a seu pedido!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.inputmethodservice.ExtractEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nome"/>

        <CheckBox
            android:id="@+id/baconCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bacon"/>

        <CheckBox
            android:id="@+id/queijoCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Queijo"/>

        <CheckBox
            android:id="@+id/orionRingsCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Orion Rings"/>


        <TextView
            android:theme="@style/EstiloTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/botaoSubtrair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="0"/>


            <Button
                android:id="@+id/botaoSomar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <TextView
            android:theme="@style/EstiloTexto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Resumo do pedido:" />
        <TextView
            android:theme="@style/EstiloTexto"
            android:id="@+id/resumoPedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="R$ 0" />

        <Button
            android:id="@+id/botaoPedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FAZER PEDIDO" />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>